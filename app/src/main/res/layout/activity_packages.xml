<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.PackagesActivity">

        <LinearLayout
            android:id="@+id/lolToolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:orientation="horizontal"
            android:background="@color/primary"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="onBtnBack"
                android:paddingHorizontal="5dp"
                android:background="@null"
                android:src="@drawable/baseline_arrow_back"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/lblAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Packages"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </LinearLayout>

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multi-languages support!"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/lolToolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:drawableStartCompat="@drawable/baseline_stars" />

        <TextView
            android:id="@+id/lblTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The most advanced AI chat bot!"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/lblTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:drawableStartCompat="@drawable/baseline_stars" />

        <TextView
            android:id="@+id/lblTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ChatGDT give you instant answers."
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/lblTitle1"
            app:layout_constraintStart_toStartOf="parent"
            app:drawableStartCompat="@drawable/baseline_stars" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/colCredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickPurchaseEight"
            android:background="@drawable/rectangle_selected"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/lblTitle2">

            <ImageView
                android:id="@+id/imgCoin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_logo_home"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/lblCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgCoin"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/lblPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eight Dollar ($8)"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/lblCredit"
                app:layout_constraintStart_toEndOf="@+id/imgCoin"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/colCredit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickPurchaseFive"
            android:background="@drawable/rectangle_selected"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/colCredit">

            <ImageView
                android:id="@+id/imgCoin1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_logo_home"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/lblCredit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgCoin1"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/lblPrice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Five Dollar($5)"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/lblCredit1"
                app:layout_constraintStart_toEndOf="@+id/imgCoin1"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/colCredit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickPurchaseOne"
            android:background="@drawable/rectangle_selected"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/colCredit1">

            <ImageView
                android:id="@+id/imgCoin2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_logo_home"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/lblCredit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgCoin2"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/lblPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="One Dollar($1)"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/lblCredit2"
                app:layout_constraintStart_toEndOf="@+id/imgCoin2"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>