<?xml version="1.0" encoding="utf-8"?>

<layout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:paddingBottom="35dp"
        android:background="@drawable/inset_drawable"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_clear_circle"
            app:tint="@color/extraLightGrey"
            android:id="@+id/imageViewCancel"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgHi"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/ic_logo_hi"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:id="@+id/actvSuccess"
            android:textStyle="bold"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/imgHi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:text="Get messages"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:textSize="18sp"
            android:id="@+id/actvTitle"
            android:layout_marginTop="10dp"
            android:text="Let's watch one video ad to earn 2 more messages"
            app:layout_constraintTop_toBottomOf="@id/actvSuccess"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGetUnlimited"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_corner_white_background"
            android:backgroundTint="@color/dialog_button_color"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="Get unlimited chat"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actvTitle" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnWatchAds"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_corner_white_background"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="Watch Ads"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnGetUnlimited" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>